{# 'navbar.twig' ~ Navbar, displaying navigation buttons/links #}

<nav class="navbar navbar-expand-sm navbar-dark bg-dark justify-content-center" id="nav">
    <ul class="navbar-nav">

        <li class="nav-item">
            <a href="{{app.request.basepath}}/" class="nav-link" >Home</a>
        </li>

        <li class="nav-item">
            <a href="{{app.request.basepath}}/" class="nav-link" >Another Link</a>
        </li>

        {% if (user is defined) %}

            {% if (user.getAdmin() == '1') %}   {# Admin Navbar #}

                <li class="nav-item">
                    <a href="{{app.request.basepath}}/auth" class="nav-link" >Admin Panel</a>
                </li>

            {% else %}   {# User Navbar #}

                <li>
                    <a href="{{app.request.basepath}}/auth" class="nav-link" >User Panel</a>
                </li>

            {% endif %}

            <li class="nav-item">
                <a href="{{app.request.basepath}}/auth/logout" class="nav-link" >Logout</a>
            </li>

        {% else %}   {# Guest Navbar #}

            <li class="nav-item">
                <a href="{{app.request.basepath}}/auth" class="nav-link" >Login</a>
            </li>

        {% endif %}

    </ul>
</nav>